{
  "enabled": true,
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "replacements:k8s-registry-move",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":skipStatusChecks",
    "github>nea0d/homelab-ops//.github/renovate/allowedVersions.json5",
    "github>nea0d/homelab-ops//.github/renovate/autoMerge.json5",
    "github>nea0d/homelab-ops//.github/renovate/clusters.json5",
    "github>nea0d/homelab-ops//.github/renovate/commitMessage.json5",
    "github>nea0d/homelab-ops//.github/renovate/customManagers.json5",
    "github>nea0d/homelab-ops//.github/renovate/grafanaDashboards.json5",
    "github>nea0d/homelab-ops//.github/renovate/groups.json5",
    "github>nea0d/homelab-ops//.github/renovate/labels.json5",
    "github>nea0d/homelab-ops//.github/renovate/packageRules.json5",
    "github>nea0d/homelab-ops//.github/renovate/semanticCommits.json5"
  ],
  "timezone": "Europe/Paris",
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prEditedNotification", "prIgnoreNotification"],
  "ignorePaths": ["**/*.sops.*", "**/.archive/**", "**/resources/**"],
  "flux": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)\\.taskfiles/.+\\.ya?ml(\\.j2)?$",
      "(^|/)ansible/.+\\.ya?ml(\\.j2)?$",
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  }
}
